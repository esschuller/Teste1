@model IEnumerable<MvcApplication1.Models.Noticia>
@{
    ViewBag.Title = "Meu Site";
}
<h2>
    Página Inicial</h2>
<div>
    <ul>
        @foreach (String item in ViewBag.Categorias) {
            <li>
                @Html.ActionLink(item, "MostraCategoria", "Home", new { @categoria = item }, null)
            </li>
        }
    </ul>
</div>
<div>
    <ul>
        @foreach (var item in Model) {
            <li>
                @Html.ActionLink(item.Titulo, "MostraNoticia", "Home", new {
               @noticiaId = item.NoticiaId,
               @categoria = item.Categoria.ToLower(),
               @titulo = item.Titulo.ToLower()
           }, null)
                <em>@Html.DisplayFor(x => item.Categoria) </em><b>@Html.DisplayFor(x => item.Data)</b>
            </li>
        }
    </ul>
</div>
<div>
    @Html.ActionLink("Todas as Notícias", "TodasNoticias", "Home")
</div>
